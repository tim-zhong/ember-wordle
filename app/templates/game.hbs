<div class="game">
  <div class="game__grid-container">
    {{#each this.grid as |row|}}
      <div class="grid__row">
        {{#each row as |letter|}}
          <span class="grid__letter">
            {{letter}}
          </span>
        {{/each}}
      </div>
    {{/each}}
  </div>
  <div class="game__keyboard-container">
    {{#each this.KEYBOARD as |row|}}
      <div class="keyboard__row">
        {{#each row as |key|}}
          <button
            type="button"
            class="keyboard__key"
            {{on 'click' (fn this.handleInput key.name)}}
            {{on-key key.code}}
          >
            {{key.name}}
          </button>
        {{/each}}
      </div>
    {{/each}}
  </div>
</div>