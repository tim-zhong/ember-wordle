{{#each this.keyboard key='index' as |row|}}
  <div class="keyboard__row">
    {{#each row key='name' as |key|}}
      <button
        type="button"
        class="keyboard__key
          {{key.class}}

          {{if
            (or (eq key.name 'Backspace') (eq key.name 'Enter'))
            'keyboard__key--special'
          }}"
        {{on 'click' (fn @handleInput key.name)}}
        {{on-key key.code}}
        {{on-key (concat 'shift+' key.code)}}
      >
        {{#if (eq key.name 'Backspace')}}
          {{inline-svg 'assets/icons/backspace'}}
        {{else}}
          {{key.name}}
        {{/if}}
      </button>
    {{/each}}
  </div>
{{/each}}